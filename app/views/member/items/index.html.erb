<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.user.name %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.condition %></td>
        <td><%= item.price %></td>
        <td><%= item.available %></td>
        <td><%= link_to 'Show', [:member, item] %></td>
        <td><%= link_to 'Edit', edit_member_item_path(item) %></td>
        <td><%= link_to 'Destroy', [:member, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

